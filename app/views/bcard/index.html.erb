<%= form_tag "/bcard/index", method: "GET" do%>
    <div class="select">
        <select name="company_name" id="ddl">
            <% @ddlBCards.each do |bcard| %>
            <option value="<%= bcard.company_name %>"><%=bcard.company_name %></option>
            <% end %>
            <% if @current_user.authority == 99 %>
            <option value="all">all</option>
            <% end %>
            
            <option value="default"  id="prompt" selected="selected">SortByCompany</option>
        </select>
        <input type="submit" value="Search" class="link-text">
    </div>
    
<% end %>

<div> <!-- class="display-center"-->
    <table class="bcards">
        <tr>
            <th class="th-company">Company</th>
            <th class="th-name">Customer</th>
            <th class="th-phone_num">Phone</th>
        </tr>
        
    <% @BCards.each do |bcard| %>
        <tr>
            <td class="td-company"><%= bcard.company_name %></td>
            <td class="td-name"><%= bcard.name %></td>
            <td class="td-phone_num"><%= bcard.phone_num %></td>
            <td><%= bcard.user_id %></td>
            <td><%= link_to 'edit', "/bcard/edit/#{bcard.id}", class: 'link-text' %></td>
            
        </tr>
    <% end %>
    </table>

</div>

